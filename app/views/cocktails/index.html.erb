<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1531387367216-681093c0279b?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=73ca72de11ae9cd2fa7367dc1ee76705&auto=format&fit=crop&w=1016&q=80') ;">
  <div class="banner-content">
    <h1>Mr. Cocktail</h1>
    <h2>Your list of fantastic cocktails</h2>
  </div>
</div>
<div class="wrapper">
  <div class="container">
    <h1 class="text-center">Cocktail Cards</h1>
    <ul class="list-group">
      <% @cocktails.each do |cocktail| %>
        <li class="list-group-item"><%= link_to cocktail.name, cocktail_path(cocktail) %></li>
        <ul>
          <% cocktail.ingredients.each do |ingredient| %>
          <% end %>
        </ul>
      <% end %>
    </ul>
  </div>
</div>

