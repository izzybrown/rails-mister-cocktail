<div class="banner-new" style="background-image: url('https://images.unsplash.com/photo-1508253730651-e5ace80a7025?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=cf395e42474f855162357f6f556e8b47&auto=format&fit=crop&w=1350&q=80') ;">
  <span id="banner-content">
  </span>
</div>

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
  Create your own Cocktail
</button>
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Add your favourite cocktail</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name, :label => 'Cocktail' %>
          <%= f.fields_for :dose,  @dose do |g|%>
            <%= g.input :description, :label => 'Description?' %>
            <%= g.association :ingredient, :label => 'Ingredients' %>
          <% end %>

      </div>
      <div class="modal-footer">
        <%= f.submit "SAVE", class: "btn btn-primary btn-lg" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
