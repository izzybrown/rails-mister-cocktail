<div class="wrapper">
  <div class="container text-center">
    <h1><%= @cocktail.name %>'s ingredients</h1>
    <%= image_tag "https://source.unsplash.com/400x400/?cocktail&sig=#{(1..1000).to_a.sample}" %>
    <ul style="list-style-type: none; padding-top: 40px;">
      <% @cocktail.doses.each do |dose| %>
        <li>
          <%= dose.ingredient.name %>
          <%= dose.description %>
          <%= link_to dose_path(dose), method: :delete do %>
          <% end %>
        </li>
      <% end %>
    </ul>



